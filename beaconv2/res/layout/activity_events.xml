<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shattered"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.test.Beac" >

    <ListView
        android:id="@+id/eventList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/newEventButton"
        android:layout_below="@+id/textView1"
        android:background="#90FFFFFF" >

    </ListView>
    <Button
        android:id="@+id/newEventButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/eventList"
        android:layout_marginRight="55dp"
        android:onClick="goCreate"
        android:text="+"
        android:textColor="#33cccc" />

    <ToggleButton
        android:id="@+id/repost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/newEventButton"
        android:layout_alignBottom="@+id/newEventButton"
        android:layout_marginRight="49dp"
        android:layout_toLeftOf="@+id/newEventButton"
        android:textColor="#33cccc"
        android:textOff="Repost"
        android:textOn="Repost" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="BEACON"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#33cccc"
        android:textSize="40sp" />

</RelativeLayout>